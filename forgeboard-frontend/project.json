{
  "name": "forgeboard-frontend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "forgeboard-frontend/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/forgeboard-frontend",
        "index": "forgeboard-frontend/src/index.html",
        "main": "forgeboard-frontend/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "forgeboard-frontend/tsconfig.app.json",
        "assets": [
          "forgeboard-frontend/src/favicon.ico",
          "forgeboard-frontend/src/assets",
          "forgeboard-frontend/src/assets/images"
        ],
        "styles": ["forgeboard-frontend/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "3mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "20kb",
              "maximumError": "40kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "buildTarget": "forgeboard-frontend:build:development"
      },
      "configurations": {
        "production": {
          "buildTarget": "forgeboard-frontend:build:production"
        }
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "forgeboard-frontend:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "forgeboard-frontend/**/*.ts",
          "forgeboard-frontend/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "forgeboard-frontend/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "forgeboard-frontend:build",
        "staticFilePath": "dist/forgeboard-frontend"
      }
    }
  },
  "tags": []
}