{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "verbose": {
      "type": "boolean",
      "description": "Display extra logging information",
      "default": false
    },
    "since": {
      "type": "string",
      "description": "Generate changelog since specific tag (default: last tag)"
    },
    "outputPath": {
      "type": "string",
      "description": "Custom path for changelog file",
      "default": "documentation/project/changelog.md"
    }
  },
  "required": []
}
