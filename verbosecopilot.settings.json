{
  "github.copilot.advanced": {
    "gpuAcceleration": "auto",
    "maxCompletionItems": 15,
    "maxTokenLength": 2048,
    "responseSpeed": "thorough",
    "memoryManagement": "high",
    "completionTimeout": 20000,
    "useJetBrains": true,
    "loggingLevel": "verbose"
  },
  "github.copilot.inlineSuggest.count": 8,
  "github.copilot.enable": {
    "plaintext": true,
    "markdown": true,
    "scminput": true,
    "typescript": true,
    "javascript": true,
    "html": true,
    "css": true,
    "scss": true,
    "json": true,
    "jsonc": true
  },
  "github.copilot.chat": {
    "modelProvider": "github-copilot",
    "defaultModelConfiguration": {
      "model": "default",
      "parameters": {
        "topK": 60,
        "temperature": 0.2
      }
    },
    "enablePrefillOnSelection": true,
    "previewMaxTokensToProcess": 12288,
    "useGPU": true,
    "autoReplyStrategy": "detailed"
  },
  "github.copilot.ui": {
    "showResponsesInEditor": true,
    "showMinimalResponsesInline": false,
    "showCompletionHover": true,
    "showCompletionDetails": true,
    "showInlineProgress": true
  },
  "github.copilot.editor": {
    "enableAutoCompletions": true,
    "enableCodeEngine": true
  },
  "github.copilot.advanced.useExtendedGPUResources": true
}