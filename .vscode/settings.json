{
  "typescript.tsdk": "node_modules/typescript/lib",
  "github.copilot.enable": {
    "plaintext": true,
    "markdown": true,
    "scminput": true
  },
  "nxConsole.generateAiAgentRules": true,
  "github.copilot.advanced": {
    "gpuAcceleration": "auto",
    "maxCompletionItems": 10,
    "maxTokenLength": 1024,
    "responseSpeed": "fast",
    "memoryManagement": "high",
    "completionTimeout": 15000,
    "useJetBrains": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true,
    "typescript": true,
    "javascript": true,
    "html": true,
    "css": true,
    "scss": true,
    "json": true,
    "jsonc": true
  },
  "github.copilot.chat": {
    "modelProvider": "github-copilot",
    "defaultModelConfiguration": {
      "model": "default",
      "parameters": {
        "topK": 40,
        "temperature": 0.1
      }
    },
    "enablePrefillOnSelection": true,
    "previewMaxTokensToProcess": 8192,
    "useGPU": true,
    "autoReplyStrategy": "smart"
  },
  "github.copilot.ui": {
    "showResponsesInEditor": true,
    "showMinimalResponsesInline": true,
    "showCompletionHover": true,
    "showCompletionDetails": true,
    "showInlineProgress": false
  },
  "github.copilot.editor": {
    "enableAutoCompletions": true,
    "enableCodeEngine": true
  },
  "files.associations": {
    "*.ts": "typescript",
    "*.tsx": "typescriptreact",
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.html": "html",
    "*.scss": "scss",
    "*.css": "css"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true
}